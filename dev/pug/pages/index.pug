extends ../layouts/base

block variables
  - pageLang = ""
  - pageTitle = "Home"
  - pageDescription = "Page-specific description"
  - pageKeywords = "Page-specific keywords"
  - pageUrl = ""


block body-content
  // $Page header
  header.page-header.js-header
    .page-header__inner
      .page-header__logo
        h1 Energy Scout
        | &nbsp;
        span Tagline TODO
      nav.page-header__nav.js-nav
        ul
          li
            a.page-header__nav-link.js-anchor.js-link.is-active(href='#home') Home
          li
            a.page-header__nav-link.js-anchor.js-link(href='#portfolio') Ablauf
          li
            a.page-header__nav-link.js-anchor.js-link(href='#contact') Kontakt


  // $Promo section
  section#home.promo.js-jumbo
    h2.promo__title
      | Energy
      span Scout
    div.promo__descr
      p.promo__descr <strong>Wechseln Sie Ihren Stromanbieter und sparen Sie bares Geld!</strong><br>Warum mehr zahlen, als Sie müssen? Finden Sie mit uns den günstigsten Stromanbieter für Ihre Bedürfnisse.
      ul.promo__descr__list
       li <strong>Kostenloser Service<br></strong> Keine versteckten Kosten oder Verpflichtungen.
       li <strong>Unkompliziert<br></strong> Kontaktieren Sie uns, wir übernehmen den Rest.
       li <strong>Garantierte Einsparung<br></strong> Reduzieren Sie Ihre Stromkosten ab dem ersten Monat.
    p.promo__descr Jetzt starten und sparen!
    a.promo__go-next.js-anchor(href='#portfolio') Scroll down


  // $Portfolio section
  section#portfolio.portfolio.js-portfolio
    .portfolio__inner
      h2.portfolio__title Wie funktioniert's?
      p.portfolio__descr In nur 3 Schritten zum günstigeren Vertrag
      p.portfolio__inner
        div.portfolio__step
          p.portfolio__step-nr 1
          img.portfolio__item-img.js-lazy(src='static/images/step1.svg', alt='')
        div.portfolio__arrow
          img.portfolio__arrow-img.js-lazy(src='static/images/arrow-right.svg', alt='')
        div.portfolio__step
          p.portfolio__step-nr 2
          img.portfolio__item-img.js-lazy(src='static/images/step2.svg', alt='')
        div.portfolio__step
          p.portfolio__step-nr 3
          img.portfolio__item-img.js-lazy(src='static/images/step3.svg', alt='')


  // $Contact section
  section#contact.contact
    .contact__inner
      h2.contact__title Kontaktieren Sie uns
      p.contact__descr Hinterlassen Sie ihre Kontaktinformationen und wir rufen Sie in Kürze zurück.
      form.contact__form(action='#', method='post')
        input#name.contact__form-input(type='text', name='name', placeholder='Name')
        input#email.contact__form-input(type='phone', name='phone', placeholder='Telefonnummer')
        textarea#message.contact__form-tarea(name='message', placeholder='Anmerkung')
        input.contact__form-submit(type='submit', value='Submit')
      .contact__card.vcard
        h3.contact__card-title Information
        .contact__card-item.place
          .fn.org Ex Ovo GmbH
          .adr
            .street-address Webgasse 5
            span.locality Wien
            | ,
            span.region  Österreich
        .contact__card-item.tel
          | +43
          span.type
          | 1234567890
        a.contact__card-item.email(href='#') info@exovo.at


  // $Page footer
  footer.page-footer
    .page-footer__inner
      span.page-footer__copyright &copy; Copyright 2023 Ex Ovo GmbH | Energy Scout
      br
      a.page-footer__impressum(href='/impressum.html') Impressum
      a.page-footer__gotop.js-anchor(href='#home') Go to top
